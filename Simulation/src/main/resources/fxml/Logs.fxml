<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="com.warehouse.simulation.app.ui.LogsController" xmlns:fx="http://javafx.com/fxml" style="-fx-padding:10">
    <top>
        <HBox spacing="8">
            <Label text="Log file:" />
            <ComboBox fx:id="logFileCombo" prefWidth="300" />
            <Button text="Refresh" onAction="#onRefresh" />
        </HBox>
    </top>

    <center>
        <VBox>
            <Label text="Tail" style="-fx-font-weight:bold" />
            <TextArea fx:id="logsArea" prefRowCount="20" editable="false" wrapText="true" />
        </VBox>
    </center>
</BorderPane>
