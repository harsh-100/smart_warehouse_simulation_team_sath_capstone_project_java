<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="com.warehouse.simulation.app.ui.AGVPanelController" spacing="8" style="-fx-padding:10" xmlns:fx="http://javafx.com/fxml">
    <Label text="AGV Control Panel" style="-fx-font-size:14px; -fx-font-weight:bold;" />
    <HBox spacing="8">
        <Button text="Start Simulation" onAction="#startSimulation" />
        <Button text="Stop Simulation" onAction="#stopSimulation" />
    </HBox>
    <Label fx:id="statusLabel" text="Status: idle" />

    <Label text="Robots:" style="-fx-font-weight:bold" />
    <ListView fx:id="robotListView" prefHeight="200" />
    <Label text="Charging Stations:" style="-fx-font-weight:bold; -fx-padding:8 0 0 0" />
    <ListView fx:id="stationsListView" prefHeight="120" />
    <Label text="Charging Queue:" style="-fx-font-weight:bold; -fx-padding:8 0 0 0" />
    <ListView fx:id="queueListView" prefHeight="120" />
</VBox>
